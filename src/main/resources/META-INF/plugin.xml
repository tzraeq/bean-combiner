<idea-plugin>
    <id>org.tzraeq.BeanCombiner</id>
    <name>Bean Combiner</name>
    <vendor email="tzraeq@163.com" url="https://gitee.com/baOZe">baOZe</vendor>

    <description><![CDATA[
    这个插件可以很方便地将其他bean的字段合并到当前bean。
    <br/>This plugin can combine other bean fields to this bean easily.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.plugins.yaml</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="BeanCombiner" anchor="right" icon="BeanCombinerIcons.ToolWindow"
                    factoryClass="org.tzraeq.idea.plugin.beancombiner.window.CombineWindowFactory"/>
        <fileType
                name="beancombiner"
                implementationClass="org.tzraeq.idea.plugin.beancombiner.lang.BeanCombinerFileType"
                fieldName="INSTANCE"
                language="yaml"
                fileNames=".beancombiner"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="tzraeq.beancombiner.action.combine" class="org.tzraeq.idea.plugin.beancombiner.action.CombineAction"
                icon="BeanCombinerIcons.ToolWindow"
                text="Combine From" description="Bean Combiner">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift C"/>
        </action>
    </actions>
</idea-plugin>